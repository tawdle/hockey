<h1>New team member</h1>

<%= form_for([@team, @team_membership]) do |f| %>
  <% if @team_membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team_membership.errors.count, "error") %> prohibited this team membership from being saved:</h2>

      <ul>
      <% @team_membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username_or_email %>
    <% if @team_membership.new_record? %>
      <%= f.text_field :username_or_email  %>
    <% else %>
      <%= f.text_field :ignore, :value => @team_membership.member.at_name, :disabled => true %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :jersey_number %>
    <%= f.text_field :jersey_number, :class => "span1" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>


<%= link_to 'Back', team_path(@team) %>

