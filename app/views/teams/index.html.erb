<h1>Listing teams</h1>

<table class="table table-hover">
  <tr>
    <th style="width: 50px;">Logo</th>
    <th>Name</th>
    <th>League</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= image_tag(team.logo_url(:thumbnail), :width => 50, :height => 50) if team.logo.present? %>
    <td><%= team.name %></td>
    <td><%= team.league.name %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
  </tr>
<% end %>
</table>
