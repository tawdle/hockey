<h3><%= t(".header") %></h3>

<%= form_for(User.new, :url => registration_path("user")) do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => "sr-only">
    <%= f.text_field :name, :placeholder => t("activerecord.attributes.user.name") %>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "sr-only">
    <%= f.email_field :email, :placeholder => t("activerecord.attributes.user.email") %>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "sr-only">
    <%= f.password_field :password, :placeholder => t("activerecord.attributes.user.password") %>
  </div>

  <%= f.hidden_field :mini, :value => true %>

  <div><%= f.submit t('.sign_up', :default => "Sign up"), :class => "btn btn-warning" %></div>
<% end %>


