<h1>Locations</h1>

<br />

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) if can? :edit, location %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Location', new_location_path, :class => "btn" %>

