<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control col-md-4", :"data-suggest-system-name-in" => "location_system_name_attributes_name" %>
      </div>

      <%= f.fields_for :system_name do |snf| %>
        <div class="form-group">
          <%= snf.label :name %>
          <div class="input-prepend">
            <span class="add-on">@</span>
            <%= snf.text_field :name, :class => "form-control" %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :address_1 %>
        <%= f.text_field :address_1, :class => "form-control col-md-4" %>
      </div>

      <div class="form-group">
        <%= f.text_field :address_2, :class => "form-control col-md-4" %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :state %>
        <%= f.text_field :state, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :zip %>
        <%= f.text_field :zip, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.country_code_select :country, { "Canada" => "CA", "United States" => "US" } %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :telephone %>
        <%= f.telephone_field :telephone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :website %>
        <%= f.url_field :website, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>

