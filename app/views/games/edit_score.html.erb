<h3 class="page-header">
  <%= @game.home_team.name %> <i>vs.</i> <%= @game.visiting_team.name %>
  <small><%= @game.start %> at <%= @game.location.name %></small>
</h3>

<%= form_for([@league, @game], :url => update_score_league_game_path(@league, @game)) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being updated:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :home_team_score, "#{@game.home_team.name} score" %>
    <%= f.number_field :home_team_score, :class => "span1" %>
  </div>

  <div class="field">
    <%= f.label :visiting_team_score, "#{@game.visiting_team.name} score" %>
    <%= f.number_field :visiting_team_score, :class => "span1" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", @league %>

