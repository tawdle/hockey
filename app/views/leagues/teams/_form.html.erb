<%= form_for([@league, @team]) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :"data-suggest-system-name-in" => "team_system_name_attributes_name" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <%= f.fields_for :system_name do |snf| %>
    <div class="field">
      <%= snf.label :name %>
      <div class="input-prepend">
        <span class="add-on">@</span>
        <%= snf.text_field :name %>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :logo_cache %>

  <div class="field">
    <% if @team.logo.present? %>
      <%= image_tag @team.logo_url(:thumbnail), :height => 50, :width => 50, :style => "float: left; margin-right: 10px" %>
    <% end %>

    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
