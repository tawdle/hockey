<h1>Leagues</h1>

<br />

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @leagues.each do |league| %>
  <tr>
    <td><%= link_to league.name, league %></td>
    <td><%= link_to 'Edit', edit_league_path(league) if can? :edit, league %></td>
    <td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, league %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New League', new_league_path, :class => "btn" %>
