<!doctype html>
<html class="<%= [params[:controller].gsub("/", "-"), params[:action]].join(" ") %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "BigShot.io" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <%= javascript_include_tag "application" %>
    <% if I18n.locale != "en" %>
      <%= javascript_tag do %>
        $.timeago.settings.lang = "<%= I18n.locale %>-short";
      <% end %>
    <% end %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <%= render "favicons" %>
    <%= render :partial => "analytics" %>
  </head>
  <body>
    <% if true || use_facebook %>
      <div id="fb-root"></div>
      <script>
        window.fbAsyncInit = function() {
          FB.init({
            appId      : '501253019996420',
            status     : true,
            xfbml      : true
          });
        };

        (function(d, s, id){
           var js, fjs = d.getElementsByTagName(s)[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement(s); js.id = id;
           js.src = "//connect.facebook.net/<%= { fr: "fr_CA", en: "en_US" }[I18n.locale] %>/all.js";
           fjs.parentNode.insertBefore(js, fjs);
         }(document, 'script', 'facebook-jssdk'));
      </script>
    <% end %>
    <% if true || use_twitter %>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    <% end %>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <%= render 'layouts/navigation' %>
      </div>
    </nav>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="col-md-12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <footer>
      <%= render :partial => 'layouts/footer' %>
    </footer>
    <%= render :partial => "layouts/video_modal" %>
  </body>
</html>
