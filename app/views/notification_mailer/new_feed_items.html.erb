<!DOCTYPE html>

<html>
  <head>
    <title>BigShot.io</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <style>
      @import url(http://fonts.googleapis.com/css?family=Open+Sans);
    </style>
  </head>

  <body style="margin:0;padding:5px;font-family: 'Open Sans', Arial, Helvetica, sans-serif;">
    <div style="width:100%;border-top:2px solid red;border-bottom:1px solid #363636;margin-top:10px;margin-bottom:10px;"></div>
    <table style="margin-top:5px;width:100%;">
      <tr>
        <td>
          <%= link_to(image_tag(attachments['logo.png'].url,  :alt => "BigShot Logo", :width => 100, :height => 82, :style => "float:left;padding:0 10px 10px 0;"), root_url) %>
          <p style="margin-top: 0;font-weight:bold;"><%= t("navigation.greeting") %>, <%= @user.name %>!</p>
          <p><%= t(".what_is_new_html", :link => link_to("BigShot.io", root_url, :style => "text-decoration:none;")) %></p>
        </td>
      </tr>
    </table>

    <div style="width:100%;border-top:2px solid red;border-bottom:1px solid #363636;margin-bottom:5px;"></div>

    <%= render :partial => "feed_items", :locals => { :items => @items, :reply => false, :owner => @user } %>

    <div style="background-color:#363636;border-top:3px solid red;color:white;padding:10px;">
      <% link = link_to(t(".unsubscribe_link_text"), {:only_path => false, :controller => :unsubscribe, :action => :unsubscribe, :user_id => @user.id, :token => @user.unsubscribe_token, :category => :daily_activity_feed}, :style => "color:white;") %>
      <p><%= t(".unsubscribe_html", :link => link) %>.</p>
      <p><%= t("layouts.footer.copyright_html") %></p>
    </div>

  </body>
</html>

