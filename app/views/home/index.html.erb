<% if current_user %>
  <p>You are logged in as <%= current_user.email %>.</p>
  <p>Click to <%= link_to 'sign_out', destroy_user_session_path, :method => :delete %><p>
<% else %>
  <p>Click to <%= link_to 'sign in', new_user_session_path %>.</p>
  <p>Click to <%= link_to 'sign up', new_user_registration_path %></p>
<% end %>

